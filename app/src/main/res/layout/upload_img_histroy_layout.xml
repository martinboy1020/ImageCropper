<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white" />

    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/text_img_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/image_preview"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/text_upload_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_img_url"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/image_preview"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/btn_copy_url"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/text_upload_date"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/image_preview"
        android:background="@drawable/home_item_bg"
        android:text="@string/text_copy_image_url"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/white" />

</RelativeLayout>